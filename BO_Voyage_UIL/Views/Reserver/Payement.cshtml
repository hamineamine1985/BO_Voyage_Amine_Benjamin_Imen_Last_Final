
<form id="saveDossier">
    <br />
    <h4>Renseignez votre courriel :</h4>
    <div class="field half first">
        <label for="email" class="field half first">Email</label>
        <input name="email" id="email" type="email" placeholder="Email : " required>
    </div>
    <div class="field half first">
        <label for="nbrV">Nombre de voyageur</label>
        <input name="nbrV" id="NbreVoy" type="text" placeholder="Nombre de voyageur :" min="10" max="100" required />

    </div>
    <br />
