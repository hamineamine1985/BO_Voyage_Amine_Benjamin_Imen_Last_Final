@using BO_Voyage_UIL.Controllers
@model  ViewVoyajeursModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Marketing.cshtml";
}

<h2>Mes voyageurs</h2>

<p>
    @{
        if (Model.Etat == 0)
        {
            @Html.ActionLink("Ajouter voyageur", "Create", new { id = Model.Ids.id, idCli = Model.Ids.idCli })
        }
        else if (Model.Etat == 1)
        {
            @Html.ActionLink("Paiement", "Accepte", new { id = Model.Ids.id, idCli = Model.Ids.idCli })
        }
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Voyageurs.FirstOrDefault().Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Voyageurs.FirstOrDefault().Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Voyageurs.FirstOrDefault().DateNaissance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Voyageurs)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNaissance)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { idVoyageur = item.Id, id = Model.Ids.id, idCli = Model.Ids.idCli }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Supprimer", "Delete", new { idVoyageur = item.Id, id = Model.Ids.id, idCli = Model.Ids.idCli })
            </td>
        </tr>
    }

</table>
